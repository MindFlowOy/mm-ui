//-script(type='text/ng-template', id='app.tpl.html').

nav-page#app-page
  //-
      Create tabs with an icon and text label, using the tabs-positive style (blue by default),
      and disabling header title animation when switching tabs.

  tabs(tabs-style='tabs-icon-top', tabs-type='tabs-positive', animate-nav='false')
    //-
       Questions tab
    tab(title='Questions', icon='icon ion-home', ng-controller='QuestionListCtrl')
      content(has-header='true', has-tabs='true')
        list
          item(ng-repeat='q in questions', type='item-text-wrap', href='#/question/{{q.id}}')
            h3 {{q.title}}
            p {{q.description}}
    //-
       Adoption tab
    tab(title='Adopt', icon='icon ion-heart')
      content(has-header='true', has-tabs='true')
        .padding
          h2 Answer a question today.
        .list.list-inset
          label.item.item-input
            span.input-label Your name
            input(type='text')
          label.item.item-input
            span.input-label Your email
            input(type='password')
          label.item.item-input
            textarea(placeholder='Any more info?')
          button.button.button-positive.button-block Send
    //-
       Home tab
    tab(title='About', icon='icon ion-search')
      content(has-header='true', has-tabs='true', padding='true')
        h3 About this app
        p
          | This is a sample seed project for the Ionic Framework. Please change it to match your needs.
